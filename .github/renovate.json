{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["@vitest/coverage-c8","vitest"],
      "groupName": "vitest",
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@deck.gl"],
      "groupName": "deck.gl",
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "excludePackagePatterns": [
        "vitest",
        "deck.gl"
      ],
      "matchUpdateTypes": ["minor"],
      "groupName": "minors",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": "before 5am on saturday"
  },
  "timezone": "America/New_York",
  "schedule": "every weekend"
}
