{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },
    {
      "groupName": "vitest",
      "matchPackageNames": ["@vitest/coverage-c8", "vitest"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "groupName": "deck.gl",
      "matchPackagePrefixes": ["@deck.gl"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "groupName": "minors",
      "matchUpdateTypes": ["minor"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": "before 5am on saturday"
  },
  "timezone": "America/New_York",
  "schedule": "every weekend"
}
